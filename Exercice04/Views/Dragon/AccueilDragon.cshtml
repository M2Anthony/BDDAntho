@* @model List<Dragon>
 *@
<div class="text-center">
    <h1>Bienvenue dans le DragonShop !</h1>
</div>

<br />
<br />

<div class="text-end">
    <a asp-action="AjouterDragonAleatoire" type="button" class="btn btn-primary">Générer dragon aléatoire</a>
    <a asp-action="FormulaireAjouterDragon" type="button" class="btn btn-primary">Ajouter Dragon</a>
</div>

<br />
<br />

@{

    <table class="table table-striped table-dark">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Age</th>
                <th scope="col">Détails</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var dragon in Model)
            {
                <tr>
                    <th scope="row">@dragon.Id</th>
                    <td>@dragon.Nom</td>
                    <td>@dragon.Age</td>
                    <td><a asp-action="DetailsDragon" asp-route-id="@dragon.Id" type="button" class="btn btn-primary">Détails</a></td>
                    <td><a asp-action="SupprimerDragon" asp-route-id="@dragon.Id" type="button" class="btn btn-danger">Supprimer</a></td>
                </tr>

            }

        </tbody>
    </table>


}

